<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<style>
body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.topnav {
  overflow: hidden;
  background-color: rgba(34, 34, 34, 0.979);
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #04AA6D;
  color: white;
}
</style>
<body>
  <%- include('header1'); -%>
  <div class="topnav">
		<a href="/profile">Home</a>
		<a class="active" href="/reqlist">Requests</a>
		<a href="/logout">Logout</a>
	  </div>
  
  <div style="padding-top:12px">
      <div class="text-center"><h2>Request List</h2></div>
  </div>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Request id</th>
            <th scope="col">Full name</th>
            <th scope="col">Department</th>
            <th scope="col">Product name</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity</th>
            <th scope="col">Response</th>
          </tr>
        </thead>
        <tbody>
        <% history.forEach(r =>{%>
            <tr>
                <th scope="row"><%= r._id %></th>
                <td><%= r.full_name %></td>
                <td><%= r.Department %></td>
                <td><%= r.product_name %></td>
                <td><%= r.Category %></td>
                <td><%= r.quantity %></td>
                <td><a href="#" onclick="myFunction()">Click here</a></td>
            </tr>
        <%})%>
        <script>
          function myFunction() {
          confirm("Approve the current request?");
          }
          </script>
        </tbody>
      </table>
</body>
</html>