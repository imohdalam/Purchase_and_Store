	<div class="col-md-4 col-md-offset-4">
		<div>
			<p><h3>Enter your details</h3>
			</p>
		</div>
		
			<form class="form-group" id="form3" method="post">
				<div class="form-row text-left">
					<div class="form-group col-md-6">
					<label for="exampleFormControlTextarea1">Full name*</label>
					<input type="text" name="full_name" placeholder="" required="" class="form-control"><br/></div></div>
					
				<div class="form-group col-md-6 text-left">
				<label for="exampleFormControlTextarea1">Email*</label>
				<input type="text" name="username" placeholder="" required="" class="form-control"><br/></div>
				
				<div class="form-group col-md-6 text-left"><label for="exampleFormControlTextarea1">Department name*</label>
				<input type="text" name="Department" placeholder="" required="" class="form-control"><br/></div>
				
				<div class="form-row text-left"><div class="form-group col-md-6 text-left"><label for="exampleFormControlTextarea1">Product name*</label>
				<input type="text" name="product_name" placeholder="" required="" class="form-control"><br/></div></div>
				
				<div class="form-group col-md-6 text-left"><label for="exampleFormControlTextarea1">Category*</label>
				<input type="text" name="Category" placeholder="" required="" class="form-control"><br/></div>
				
				<div class="form-group col-md-6 text-left"><label for="exampleFormControlTextarea1">Quantity*</label>
				<input type="number" name="quantity" required="" class="form-control"><br/></div>				
				<button type="button" class="btn btn-secondary"><a href="#">Back</a></button>
				<button type="submit" class="btn btn-success">Submit</button>
			
			
		
		<div class="mssg bg-danger">
			<span id="check"></span>
